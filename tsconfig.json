{
  "compilerOptions": {
    "outDir": ".",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "edge-mock": [""],
      "edge-mock/*": ["*"]
    },
    "types": ["@cloudflare/workers-types", "@types/jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "lib"]
}
